/* pages/about/about.wxss */
.container{
  position: relative;
  padding: 0;
  min-height: 100vh;
  background-color: #F1F1F1;
  align-items: flex-start;
}
.banner{
  width: 100%;
  height: 460rpx;
}
.banner-img{
  width: 100%;
  height: 100%;
}

.about-bg{
  position: absolute;
  top: 360rpx;
  left: 0;
  right: 0;
  width: 93%;
  height: 800rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background-color: #fff;
}
.about-bg .head-icon{
  position: absolute;
  top: -80rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}
.about-bg .ab-desc{
  margin-top: 100rpx;
  text-align: center;
  line-height: 60rpx;
}
.about-bg .ab-desc .title{
  font-weight: bold;
}
.kw-wrap{
  margin-top: 10rpx;
}
.keyword{
  padding: 3rpx 8rpx;
  margin: 0 10rpx;
  color: #1965FC;
  font-size: 28rpx;
  border: 2rpx solid #1965FC;
}
.btn{
  text-align: center;
  margin-top: 70rpx;
}
.itBtn{
  margin: 0 20rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 16rpx 40rpx;
  background-color: #373CD6;
}
.yyszm{
  margin-top: 60rpx;
  text-align: center;
  line-height: 72rpx;
}
.yyszm .yy-title{
  color: #F3CA22;
  font-size: 40rpx;
  font-weight: bold;
}
.yyszm .yy-desc{
  font-size: 28rpx;
}
